# media menu
bindsym $mod+m exec --no-startup-id ~/.scripts/rofi/musicmenu.sh

# signal i3blocks for changes
set $signal_bar pkill -SIGRTMIN+10 i3blocks

# brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 && $signal_bar
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 && $signal_bar

