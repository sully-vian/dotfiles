# mod key
set $mod Mod4

# i3-bar
set $bar i3blocks

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:FiraCode 10

# Monitor config:
exec_always --no-startup-id ~/.config/i3/monitor-setup.sh

# start redshift, -P pour reset
exec_always pkill redshift
exec_always redshift -x
exec_always --no-startup-id redshift -P -c ~/.config/redshift/redshift.conf

# picom
exec_always --no-startup-id picom

# make windows float
for_window [class="floating"] floating enable

# remove window borders
for_window [class="^.*$"] border none

gaps inner 10
# smart_gaps on
smart_borders on

# restart xautolock with 5 min timer
exec_always --no-startup-id killall xautolock
exec_always --no-startup-id xautolock -time 5 -locker ~/.config/i3/i3lock-color.sh -detectsleep

