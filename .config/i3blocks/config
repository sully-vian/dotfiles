# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=~/.config/i3blocks/$BLOCK_NAME.sh
separator_block_width=15
separator=true
markup=pango

[active-window-title]
interval=1

# music
[mediaplayer]
interval=1
signal=10

[volume]
interval=once
signal=10

[bluetooth]
interval=1

[network]
interval=1

[bandwidth]
interval=1

[memory]
interval=1
separator=false

[disk]
interval=1

[cpu_usage]
interval=1

[battery]
interval=1

[brightness]
interval=once
signal=10

[time]
command=date '+%d-%m-%Y %H:%M:%S'
interval=1

[keyindicator]
interval=once
signal=10
